
@model CervusDama.Data.Model.AnswerModel.AnswerInsertModel
@{
    ViewBag.Title = "InsertQuestionAnswer";
}

@if (User.Identity.IsAuthenticated)
{
    <h2 class="page-title">Cevap Gönder</h2>
    <div class="answer-box">
        @{
            using (Html.BeginForm("Insert", "Answer", FormMethod.Post, new { id = "answer-from" }))
            {

                @Html.AntiForgeryToken();
                @Html.HiddenFor(m => m.Slug)
                @Html.HiddenFor(m => m.QuestionId)
                <div class="form-item">
                    <div class="form-control">
                        @Html.TextAreaFor(m => m.Content, new { placeholder = "Cevap Gönder..", style="height:100px;" })
                    </div>
                </div>
       
                <div class="form-item">
                    <div class="form-control" style="text-align:right;">
                        <button class="btn btn-primary" type="submit"><i class="cdi cdi-share"></i> Cevap Gönder</button>
                    </div>
                </div>
            }
        }
    </div>
}
else
{
    <div class="no-content">Cevap eklemek için Cervus Dama üyesi olmalısınız.</div>
}

