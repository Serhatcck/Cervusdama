@model IEnumerable<CervusDama.Data.Model.CategoryModel.CategoryListModel>
@using CervusDama.Admin.Helpers

<table class="data-table strip hovered">
	<thead>
		<tr>
			<th class="check">#</th>
			<th style="width:250px;">İsim</th>
			<th>Açıklama</th>
			<th>Slug</th>
			<th class="prc" colspan="3">İşlemler</th>
		</tr>
	</thead>
	<tbody>

		@foreach (var item in Model)
		{
			<tr>
				<td class="center"><input type="checkbox" /></td>
				<td>@Html.Raw(item.ParentID > 0 ? "&nbsp;&nbsp;&nbsp;<i class=\"fa fa-long-arrow-alt-right\"></i>" : "") @item.Title</td>
				<td>@item.Description</td>
				<td>@item.Slug</td>
				<td class="option">
					<a href="javascript:void(0)" data-id="@item.ID" class="green edit-link"><i class="fa fa-edit"></i></a>
				</td>
				<td class="option">
					<a href="javascript:void(0)" data-id="@item.ID" class="remove delete-link"><i class="fa fa-times"></i></a>
				</td>
				<td class="option">
					<a href="javascript:void(0)" data-id="@item.ID" class="@(item.Status == 1 ? "green" : "ban") ban-link"><i class="fa fa-ban"></i></a>
				</td>
			</tr>
		}

	</tbody>
	<tfoot>
		<tr>
			<td colspan="5">
				@Html.Pager((int)ViewBag.currentPage, (int)ViewBag.totalData, "/kategori")
			</td>
		</tr>
	</tfoot>
</table>